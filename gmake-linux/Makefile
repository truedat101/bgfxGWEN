ifndef config
  config=debug_x32
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x32)
  GWEN_Static_config = debug_x32
  GWEN_UnitTest_config = debug_x32
  bgfxGwenRenderer_config = debug_x32
  bgfxGwenSample_config = debug_x32
endif
ifeq ($(config),release_x32)
  GWEN_Static_config = release_x32
  GWEN_UnitTest_config = release_x32
  bgfxGwenRenderer_config = release_x32
  bgfxGwenSample_config = release_x32
endif

PROJECTS := GWEN_Static GWEN_UnitTest bgfxGwenRenderer bgfxGwenSample

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

GWEN_Static:
ifneq (,$(GWEN_Static_config))
	@echo "==== Building GWEN_Static ($(GWEN_Static_config)) ===="
	@${MAKE} --no-print-directory -C . -f GWEN_Static.make config=$(GWEN_Static_config)
endif

GWEN_UnitTest:
ifneq (,$(GWEN_UnitTest_config))
	@echo "==== Building GWEN_UnitTest ($(GWEN_UnitTest_config)) ===="
	@${MAKE} --no-print-directory -C . -f GWEN_UnitTest.make config=$(GWEN_UnitTest_config)
endif

bgfxGwenRenderer:
ifneq (,$(bgfxGwenRenderer_config))
	@echo "==== Building bgfxGwenRenderer ($(bgfxGwenRenderer_config)) ===="
	@${MAKE} --no-print-directory -C . -f bgfxGwenRenderer.make config=$(bgfxGwenRenderer_config)
endif

bgfxGwenSample: GWEN_UnitTest bgfxGwenRenderer GWEN_Static
ifneq (,$(bgfxGwenSample_config))
	@echo "==== Building bgfxGwenSample ($(bgfxGwenSample_config)) ===="
	@${MAKE} --no-print-directory -C . -f bgfxGwenSample.make config=$(bgfxGwenSample_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f GWEN_Static.make clean
	@${MAKE} --no-print-directory -C . -f GWEN_UnitTest.make clean
	@${MAKE} --no-print-directory -C . -f bgfxGwenRenderer.make clean
	@${MAKE} --no-print-directory -C . -f bgfxGwenSample.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x32"
	@echo "  release_x32"
